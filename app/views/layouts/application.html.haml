!!! 5
- html_tag :class => 'no-js' do
  = render 'head'

  %body{ :class => "#{ controller.controller_name } preload" }
    = render 'chromeframe'

    #layout.pure-g-r
      = render 'flashes'

      -if controller.controller_name == "home"
        = render 'header-home'
      -else
        = render 'header'

      = render 'navigation'

      = yield

      = render 'footer'

    -# Javascript at the bottom for fast page loading
    = render 'javascripts'
    = yield(:maps)
    = yield(:fancybox)
  
    %script{:src => "//use.typekit.net/mor8rre.js", :type => "text/javascript"}
    :javascript
      try{Typekit.load();}catch(e){}
