!!! 5
- html_tag :class => 'no-js' do
  = render 'head'

  %body{ :class => "#{ controller.controller_name } preload" }
    = render 'chromeframe'

    = render 'flashes'

    -if controller.controller_name == "home"
      = render 'header-home'
    -else
      = render 'header'

    = render 'navigation'

    = yield

    = render 'footer'

    -# Javascript at the bottom for fast page loading
    = render 'javascripts'
    = yield(:maps)
    = yield(:lightbox)
