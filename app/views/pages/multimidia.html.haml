#page-content.container
  #multimedia
    .row-fluid
      .span
        %h2.text-center
          Fotos

    .row-fluid
      .span.wood-box
        %ul
          - (1..11).each do |i|
            %li
              %a{:href => "/assets/group1/#{i}.jpg", :rel => "lightbox[grupo1]", :title => "TITOLO-#{i}"}
                %img{:alt => "thumb-#{i}", :src => "/assets/group1/thumbs/#{i}.jpg"}

- content_for(:lightbox) do
  = javascript_include_tag :smooth_scroll
  = javascript_include_tag :lightbox

